@model List<I_RAY_ASSET_TRACKER_MVC.Models.AssetDeallocationModel>

<style>
    .row {
        margin-top: 1rem;
    }

    #dataTable th {
        background-color: #ffc107;
    }

    tr {
        text-align: center;
    }
</style>

<script>
    $(function () {
        $("#dataTable .DeallocateAsset").click(function () {
            var EmployeeID = $(this).closest("tr").find("td").eq(0).html();
            var EmployeeName = $(this).closest("tr").find("td").eq(1).html();
            var Team = $(this).closest("tr").find("td").eq(2).html();
            var AssetType = $(this).closest("tr").find("td").eq(3).html();
            var HWSWName = $(this).closest("tr").find("td").eq(4).html();
            var SerialNumberVersionNumber = $(this).closest("tr").find("td").eq(5).html();
            var AssignDate = $(this).closest("tr").find("td").eq(6).html();
            var Assetbelongsto = $(this).closest("tr").find("td").eq(7).html();
            var InvoiceNo = $(this).closest("tr").find("td").eq(8).html();
            $.ajax({
                type: "POST",
                url: "/AssetDeallocation/AssetDeallocateDetails",
                data: {
                    EmployeeID: EmployeeID,
                    EmployeeName: EmployeeName,
                    Team: Team,
                    AssetType: AssetType,
                    HWSWName: HWSWName,
                    SerialNumberVersionNumber: SerialNumberVersionNumber,
                    AssignDate: AssignDate,
                    Assetbelongsto: Assetbelongsto,
                    InvoiceNo: InvoiceNo
                },
                success: function (response) {
                    alert("Your asset was successfully relocated.");
                    window.location.href = '/AssetDeallocation/Index';
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        });
    });

</script>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-12">
            <table id="dataTable" class="display compact table table-bordered table-primary">
                <thead>
                    <tr>
                        <th>EmployeeID</th>
                        <th>EmployeeName</th>
                        <th>Team</th>
                        <th>AssetType</th>
                        <th>HWSWName</th>
                        <th>SerialNumberVersionNumber</th>
                        <th>AssignDate</th>
                        <th>Assetbelongsto</th>
                        <th>InvoiceNo</th>
                        <th>Deallocation</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="10">
                                No Matching Records Found
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.EmployeeID)</td>
                                <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Team)</td>
                                <td>@Html.DisplayFor(modelItem => item.AssetType)</td>
                                <td>@Html.DisplayFor(modelItem => item.HWSWName)</td>
                                <td>@Html.DisplayFor(modelItem => item.SerialNumberVersionNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.AssignDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.Assetbelongsto)</td>
                                <td>@Html.DisplayFor(modelItem => item.InvoiceNo)</td>
                                <td>
                                    <a class="DeallocateAsset btn btn-primary" href="javascript:void(0);">
                                        Deallocate
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}
