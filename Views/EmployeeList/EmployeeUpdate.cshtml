@model I_RAY_ASSET_TRACKER_MVC.Models.PagedListEmployee

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.Label("Sno : ")
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Sno, new { @readonly = "readonly", @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.Label("EmpID : ")
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.EmpID, new { @readonly = "readonly", @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.Label("FirstName : ")
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.Label("MiddleName : ")
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.Label("LastName : ")
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.Label("EmployeeName : ")
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.EmployeeName, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.Label("Team : ")
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.DropDownListFor(m => m.Team, new SelectList(new[] { "SV", "FSW", "IS", "S&R", "Automation", "HR", "Support", "FWV" }), "--Select Team--", new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.Label("Role : ")
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="col-md-12">
                    @Html.DropDownListFor(m => m.Role, new SelectList(new[] { "User","Manager", "AssetManager", "Admin" }), "--Select Role--", new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="form-group col-md-6">
                <div class="col-md-12">
